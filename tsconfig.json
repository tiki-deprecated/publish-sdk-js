{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist/@types",
    "declarationMap": false,
    "allowJs": true,
    "strict": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./@types",
    "src/**/*"
  ],
  "exclude": ["node_modules"],
  "files": ["./src/index.ts"],
  "typedocOptions": {
    "name": "TikiSdk",
    "includeVersion": true,
    "navigationLinks": {
      "Log in": "https://console.mytiki.com"
    },
    "hideGenerator": true
  }
}

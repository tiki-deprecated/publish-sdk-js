{
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/test/js/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "reporters": [
    "default",
    ["jest-junit", {"outputDirectory": "reports", "outputName": "report.xml"}],
    "github-actions"
  ]
}
